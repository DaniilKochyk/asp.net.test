@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewBag.Title = "Lista kont";
}

<a asp-action="Create">Dodać użytkownika</a>

<table class="table">
    <tr><th>Email</th><th>Login</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edytować</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Usunąć
                    </button>
                </form>
            </td>
        </tr>
    }
</table>